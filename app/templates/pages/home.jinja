{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Teams

{% endblock %}


{% block content %}

    <h1>Teams...</h1>

    <section id="tech-stack">
    
      {% for team in teams %}

        <article>
            <header>
                {{ team.name }}
            </header>

            <p>{{ team.description }}</p>

            <footer>
                <p>Find out more about <a href="/team/{{ team.code }}">the {{ team.name }}</a></p>
            </footer>
        </article>

      {% endfor %}
    
    
    </section>

    {% if session.user_id %}

    <article>

        <header>
            <h2>Add a New Team!</h2>
        </header>

        <form action="/add-team" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Name"
                required
            >

            <input
                type="text"
                name="code"
                placeholder="Code"
                required
            >

            <input
                type="text"
                name="description"
                placeholder="Description"
                required
            >

            <input
                type="text"
                name="website"
                placeholder="Website"
                required
            >

            <button>Add Team!</button>

        </form>

        {% else %}

          <a href="/login">Login</a> or <a href="/register">Register</a> to add a new team!

        {% endif %}

{% endblock %}

